<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
              crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    {#  {{ encore_entry_link_tags('app') }}#}
        <style>
            body{
                background-color: #f4ebd2;
            }
            #addTopic{
                width: 8%; height: 40px
            }
            main{
                min-height: 1500px;
            }
            .link{
                color: black; text-decoration: none;
            }
            .card{
                width: 18rem; background-color: #dfdfdf;
            }
            .card-message{
                background-color: #94cde8;
            }
            .content{
                border: lightgray 1px solid;
            }

            @media (max-width: 1250px) {
                main{
                    width: 100%;
                }
            }
            a:hover{
                color: black;
            }
        </style>
    {% endblock %}

    {% block javascripts %}
    {#  {{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>
<body class="m-0">
<header style=" height: 60px" class="row bg-white">
    <a class="col-3" style="margin-left: 2%" href="{{ path('home') }}"><img src="https://www.zupimages.net/up/22/29/2br8.png"/></a>
    <a class="btn btn-sm border col-1 mt-2 pt-2" id="addTopic" href="{{ path('new_topic') }}">Cr√©er un
        topic</a>
    <form method="post" name="search" action="{{ path('search') }}" class="col" style="margin-left: 1%">
        <div class="row mt-2">
            <input class="form-control w-50" id="search" name="search"
                   placeholder="Recherchez un titre de topic..."/>
            <button class="col-1 btn border" type="submit" style="margin-left: 1%"><i class="bi bi-search"></i></button>
        </div>
    </form>
    <hr/>
</header>
<main class="w-75 mx-auto pt-3 bg-white">
    {% block body %}{% endblock %}
</main>
</body>
</html>
