{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}

    <form action="{{ path('add_topic') }}" method="post" name="add_topic" class="col mx-auto w-50 mx-auto mt-5" >

        <div class="row mb-3">
            <div class="col">
        <label for="username">Username</label>
        <input class="row form-control w-75" type="text" name="username" placeholder="Saisissez un nom..." id="username" />
            </div>
            <div class="col">
        <label for="title">Titre</label>
        <input class="row form-control w-100" type="text" name="title" placeholder="Saisissez un titre..." id="title" />
            </div>
        </div>

        <label for="content">Contenu</label>
        <input class="row form-control w-100" style="height: 100px" type="text" name="content" placeholder="Ecrivez du texte..." id="content" />

        <button type="submit" class="btn btn-success mt-3" style="margin-left: 40%">Envoyer</button>
    </form>

{% endblock %}
